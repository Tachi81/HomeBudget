@model HomeBudget.ViewModels.FinancialOperationsHistoryViewModel

@{
    ViewBag.Title = "History";
}

<h2>History</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FinancialOperation.BankAccount.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinancialOperation.AmountOfMoney)
        </th>
        <th>
            @Html.LabelFor(model => model.FinancialOperation.DescriptionOfOperation,"From / To")
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.FinancialOperation.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinancialOperation.Note)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.ListofFinancialOperation)
    {
        <tr>
            /
            <td>
                @Html.DisplayFor(modelItem => item.BankAccount.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfMoney)
            </td>

            <td>
              @Html.Raw(item.DescriptionOfOperation)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.DateTime.DayOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            
        </tr>
    }

</table>
