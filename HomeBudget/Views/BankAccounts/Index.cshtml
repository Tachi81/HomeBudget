@using HomeBudget.Models
@model HomeBudget.ViewModels.BankAccountViewModel

@{
    ViewBag.Title = "BankAccount";
}

<h2>BankAccounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankAccount.AccountName)
        </th>
        
        <th></th>
    </tr>

@foreach (BankAccount item in Model.BankAccountsList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
